/*
 * Class circle. Has radius and methods related to circles.
 */
class Circle {
 double radius;
  /* Constructor with radius
   */
  Circle(double radius) {
    this.radius = radius;
  }

  /* Returns area of circle. 
   */
  double getArea() {
    return Math.PI * radius * radius;
  }

  /* Returns circumference of circle. 
   */
  double getCircumference() {
    return 2 * Math.PI * radius;
  }
  /* Returns radius of circle.
   */
  double getRadius() {
    return radius;
  }
}


class Main {
  /* Creates two circles and prints their properties. 
   */
  public static void main(String[] args) {
    Circle circle1 = new Circle(1);
    Circle circle2 = new Circle(2);

    System.out.println("circle1 radius 1");
    System.out.println("radius circle1: " + circle1.getRadius());
    System.out.println("circumference circle1: " + circle1.getCircumference());
    System.out.println("area circle1: " + circle1.getArea());

    System.out.println("circle2 radius 2");
    System.out.println("radius circle2: " + circle2.getRadius());
    System.out.println("circumference circle2: " + circle2.getArea());
    System.out.println("area circle2: " + circle2.getCircumference());
  }
}
