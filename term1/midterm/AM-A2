import java.util.Scanner;

class Main {
  public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);
        String name = scan.nextLine() ;
        String nameInUpperCase = name.toUpperCase();

        int lengthOfName = name.length();
        char initial = nameInUpperCase.charAt(0);

        if(lengthOfName < 5){
          System.out.println("Your initial is " + initial + " and your name is short!");
        }
        else if (lengthOfName >= 5 && lengthOfName < 10){
          System.out.println("Your initial is " + initial + " and your name is average");
        }
        else {
          System.out.println("Your initial is " + initial + " and your name is long!");
        }
    }
}
